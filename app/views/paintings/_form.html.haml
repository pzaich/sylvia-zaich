= form_for @painting, :remote => true do |f|
  .modal-body
    .control-group
      = f.label :name, :class => "control-label"
      = f.text_field :name, :class => "input-block-level", :placeholder => "name of painting"
    .control-group
      = f.label :description, :class => "control-label"
      = f.text_area :description, :rows => 6, :class => "input-block-level", :placeholder => "a short description of the painting"
  .modal-footer
    .control-group
      = f.submit "Add Painting", :class => "btn btn-large btn-success pull-right"